@model List<AcunMedyaPortfolyo.Models.Tbl_Slider>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
    int count = 0;
}

<h2 style="color: midnightblue; background-color: aliceblue; padding: 10px; border-radius: 8px;">Burası Slider Sayfası</h2>
<div class="container">
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>Slider Sayısı</th>
                <th>SliderID</th>
                <th>NameSurname</th>
                <th>Description</th>
                <th>ImageURL</th>
                <th>Güncelle</th>
                <th>Sil</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                count++;
                <tr>
                    <td>@count</td>
                    <td>@item.SliderID</td>
                    <td>@item.NameSurname</td>
                    <td>@item.Description</td>
                    <td><img src="@item.ImageURL style="width:60px" /td>
                    <td><a href="/Slider/UpdateSlider/@item.SliderID" class="btn btn-success">Güncelle</a></td>
                    <td><a href="/Slider/RemoveSlider/@item.SliderID" class="btn btn-danger">Sil</a></td>

                </tr>
            }

        </tbody>
    </table>
    <a class="btn btn-outline-primary" style="color: midnightblue; background-color: aliceblue; border: 1px solid midnightblue;" href="/Slider/CreateSlider/">Oluştur</a>

</div>
