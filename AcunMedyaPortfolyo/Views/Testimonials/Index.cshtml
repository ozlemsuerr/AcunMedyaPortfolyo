@model List<AcunMedyaPortfolyo.Models.Tbl_Testimonials>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
    int count = 0;
}

<h2 style="color: midnightblue; background-color: aliceblue; padding: 10px; border-radius: 8px;">Burası Referanslar Sayfası</h2>

<div class="container">
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>Testimonials Sayısı</th>
                <th>TestimonialsID</th>
                <th>Description</th>
                <th>TestimonialsName</th>
                <th>Description2</th>
                <th>ImageURL</th>
                <th>Title</th>
              
                <th>Güncelle</th>
                <th>Sil</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)//veri çekme ne kadar veri varsa çeker

            {
                count++;
                <tr>
                    <td>@count</td>
                    <td>@item.TestimonialsID</td>
                    <td>@item.Description</td>
                    <td>@item.TestimonialsName</td>
                    <td>@item.Description2</td>
                    <td><img src="@item.ImageURL" style="width:60px" /td>
                    <td>@item.Title</td>
                  
                    <td><a href="/Testimonials/UpdateTestimonials/@item.TestimonialsID" class="btn btn-success">Güncelle</a></td>
                    <td><a href="/Testimonials/RemoveTestimonials/@item.TestimonialsID" class="btn btn-danger">Sil</a></td>

                </tr>
            }

        </tbody>
    </table>
    <a class="btn btn-outline-primary" style="color: midnightblue; background-color: aliceblue; border: 1px solid midnightblue;" href="/Testimonials/CreatTestimonials/">Oluştur</a>

</div>
