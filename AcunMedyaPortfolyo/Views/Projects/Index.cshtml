@model List<AcunMedyaPortfolyo.Models.Tbl_Project>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
    int count = 0;
}

<h2 style="color: midnightblue; background-color: aliceblue; padding: 10px; border-radius: 8px;">Burası Projeler Sayfası</h2>
<div class="container">
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>Project Sayısı</th>
                <th>ProjectID</th>
                <th>ProjectName</th>
                <th>Description</th>
                <th>ProjectLink</th>
                <th>Image1</th>
                <th>Image2</th>
                <th>Image3</th>
                <th>CatagoryID</th>
                <th>Güncelle</th>
                <th>Sil</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                count++;
                <tr>
                    <td>@count</td>
                    <td>@item.ProjectID</td>
                    <td>@item.ProjectName</td>
                    <td>@item.Description</td>
                    <td>@item.Description</td>
                    <td>@item.ProjectLink</td>
                    <td><img src="@item.Image1 style="width:60px" /td>
                    <td><img src="@item.Image2 style="width:60px" /td>
                    <td><img src="@item.Image3 style="width:60px" /td>
                    <td><a href="/Projects/UpdateProjects/@item.ProjectID" class="btn btn-success">Güncelle</a></td>
                    <td><a href="/Projects/RemoveProjects/@item.ProjectID" class="btn btn-danger">Sil</a></td>
                </tr>
            }

        </tbody>
    </table>
    <a class="btn btn-outline-primary" style="color: midnightblue; background-color: aliceblue; border: 1px solid midnightblue;" href="/Projects/CreateProject/">Oluştur</a>

