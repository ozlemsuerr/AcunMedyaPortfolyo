@model  List < AcunMedyaPortfolyo.Models.Tbl_Services>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
    int count = 0;
}

<h2 style="color: midnightblue; background-color: aliceblue; padding: 10px; border-radius: 8px;">Burası Hizmetlerimiz sayfası</h2>
<div class="container">
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>Services Sayısı</th>
                <th>ServicesID</th>
                <th>Title</th>
                <th>Description</th>
                <th>Description2</th>
                <th>IconURL</th>
                <th>Güncelle</th>
                <th>Sil</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                count++;
                <tr>
                    <td>@count</td>
                    <td>@item.ServicesID</td>
                    <td>@item.Title</td>
                    <td>@item.Description</td>
                    <td>@item.Description2</td>
                    <td><img src="@item.IconURL style="width:60px" /td>
                    <td><a href="/Services/UpdateServices/@item.ServicesID" class="btn btn-success">Güncelle</a></td>
                    <td><a href="/Services/RemoveServices/@item.ServicesID" class="btn btn-danger">Sil</a></td>

                </tr>
            }

        </tbody>
    </table>
    <a class="btn btn-outline-primary" style="color: midnightblue; background-color: aliceblue; border: 1px solid midnightblue;" href="/Services/CreateServices/">Oluştur</a>

</div>
